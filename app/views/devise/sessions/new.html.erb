<div class="flex flex-col items-center justify-center min-h-[60vh] w-full">
  <div class="w-full max-w-md bg-white p-8 border border-gray-200 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold text-center mb-8 text-gray-800">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-6">
        <%= f.label :email, "メールアドレス", class: "block mb-2 text-sm font-semibold text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, "パスワード", class: "block mb-2 text-sm font-semibold text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-6">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-2 text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2.5 rounded-lg transition-colors cursor-pointer shadow-sm" %>
      </div>
    <% end %>

    <div class="mt-8 pt-6 border-t border-gray-100 text-center text-sm space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
